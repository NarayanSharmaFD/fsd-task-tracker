<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <div style="margin: 20px; display: flex; justify-content: space-between; align-items: center;">
      <h1>Task List</h1>
      <a href="/admin/create-task/<%= projectId %>" class="btn <%= userRole === 'User' ? 'disabled' : '' %>">
        Create Task
      </a>
    </div>

    <% if (tasks.length > 0) { %>
      <table class="user-table">
        <thead>
          <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Owner</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let task of tasks) { %>
            <tr>
              <td><%= task.task_name %></td>
              <td><%= task.task_description %></td>
              <td><%= new Date(task.task_due_date).toDateString().slice(0, 10) %></td>
              <td><%= task.task_owner_id.name %></td>
              <td>
                <a href="/admin/edit-task/<%= task._id %>?edit=true" class="btn">Edit</a>

                <% if (userRole !== 'User') { %>
                  <form action="/admin/delete-task" method="POST" style="display:inline;">
                    <input type="hidden" name="projectId" value="<%= task._id %>">
                    <button class="btn" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                  </form>
                <% } else { %>
                  <button class="btn disabled-btn" disabled>Delete</button>
                <% } %>
              </td>
            </tr>
          <% } %>
        </tbody>
    </table>
    <% } else { %>
        <h1>No Projects Found!</h1>
    <% } %>
    </main>

    <%- include('../includes/end.ejs') %>
</body>