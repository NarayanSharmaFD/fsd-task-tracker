<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div style="margin: 20px;">
                    <a href="/admin/create-task/<%= projectId %>" class="btn">Create Task</a>
                </div>
                <% if (tasks.length > 0) { %>
                    <div class="grid">
                        <% for (let task of tasks) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= task.task_name %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <p class="product__description">
                                        <%= task.task_description %>
                                    </p>
                                    <p class="product__description">
                                        <%= task.task_due_date %>
                                    </p>
                                    <p class="product__description">
                                        <%= task.task_owner_id.name %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                   
                                    <a href="/admin/edit-task/<%= task._id %>?edit=true" class="btn">Edit</a>                                    

                                    <% if (userRole !== 'User') { %>
                                        <form action="/admin/delete-task" method="POST" style="display:inline;">
                                            <input type="hidden" name="projectId" value="<%= task._id %>">
                                            <button class="btn" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                                        </form>
                                    <% } else { %>
                                        <button class="btn disabled-btn" disabled>Delete</button>
                                    <% } %>
                                    
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Projects Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>