<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (projects.length > 0) { %>
                    <div class="grid">
                        <% for (let product of projects) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.project_name %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <p class="product__description">
                                        <%= product.project_description %>
                                    </p>
                                    <p class="product__description">
                                        <%= product.project_start_date %>
                                    </p>
                                    <p class="product__description">
                                        <%= product.project_end_date %>
                                    </p>
                                    <p class="product__description">
                                        <%= product.project_owner_id.name %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <% if (userRole !== 'User') { %>
                                        <a href="/admin/edit-project/<%= product._id %>?edit=true" class="btn">Edit</a>
                                    <% } else { %>
                                        <button class="btn disabled-btn" disabled>Edit</button>
                                    <% } %>

                                    <% if (userRole === 'Admin') { %>
                                        <form action="/admin/delete-project" method="POST" style="display:inline;">
                                            <input type="hidden" name="projectId" value="<%= product._id %>">
                                            <button class="btn" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                                        </form>
                                    <% } else { %>
                                        <button class="btn disabled-btn" disabled>Delete</button>
                                    <% } %>
                                    
                                    <a href="/admin/task-list/<%= product._id %>" class="btn">Go To Task</a>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Projects Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>